---
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<meta name="description" content="The Batak language is one of the most well-known ethnic languages in North Sumatera, Indonesia. Specifically, the Batak tribe.">

		<!-- og meta -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Bataknese Application" />
		<meta property="og:description" content="The Batak language is one of the most well-known ethnic languages in North Sumatera, Indonesia. Specifically, the Batak tribe." />
		<meta property="og:url" content="https://batakneseapps.vercel.app/" />
		<meta property="og:image" content="https://res.cloudinary.com/ekosutrisno/image/upload/v1678852281/briix/cc_app_ayxtn1.png" />
		<meta property="og:image:alt" content="Bataknese App Preview" />
		<meta property="og:image:width" content="1246" />
		<meta property="og:image:height" content="688" />

		<!-- twitter meta -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="https://batakneseapps.vercel.app/" />
		<meta name="twitter:creator" content="Bataknese App Team" />
		<meta name="twitter:title" content="Bataknese Application" />
		<meta name="twitter:description" content="The Batak language is one of the most well-known ethnic languages in North Sumatera, Indonesia. Specifically, the Batak tribe." />
		<meta name="twitter:image" content="https://res.cloudinary.com/ekosutrisno/image/upload/v1678852281/briix/cc_app_ayxtn1.png" />
		<meta name="twitter:image:alt" content="Bataknese App Preview" />

	</head>
	<body>
		<slot />
	</body>
</html>